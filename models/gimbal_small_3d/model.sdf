<?xml version='1.0'?>
<sdf version='1.6' xmlns:xacro='http://ros.org/wiki/xacro'>
  <model name='gimbal_small_3d'>
    <pose>0 0.2 0.18 0 0 0</pose>
    <link name='base_link'>
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <mass>0.2</mass>
        <inertia>
          <ixx>0.0001</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.0001</iyy>
          <iyz>0</iyz>
          <izz>0.0001</izz>
        </inertia>
        <pose frame=''>0.01 0.06 0 0 0 0</pose>
      </inertial>
      <self_collide>0</self_collide>
      <enable_wind>0</enable_wind>
      <kinematic>0</kinematic>
      <visual name='base_main_viz'>
        <geometry>
          <mesh>
            <scale>0.001 0.001 0.001</scale>
            <uri>model://gimbal_small_3d/meshes/base_main.dae</uri>
          </mesh>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Orange</name>
          </script>
          <shader type='pixel'/>
        </material>
        <pose frame=''>0 0 0 0 -0 0</pose>
        <transparency>0</transparency>
        <cast_shadows>1</cast_shadows>
      </visual>
      <collision name='base_col'>
        <laser_retro>0</laser_retro>
        <max_contacts>10</max_contacts>
        <pose>0.01 0.075 -0.025 0 -0 0</pose>
        <geometry>
          <box>
            <size>0.1 0.05 0.15</size>
          </box>
        </geometry>
        <surface>
          <contact>
            <ode/>
          </contact>
          <friction>
            <ode/>
          </friction>
        </surface>
      </collision>
    </link>

    <link name="roll_arm_link">
      <pose>0.03 0.005 0.00 0 0 0</pose>
      <inertial>
        <pose>0.005 0 0.02 0 0 0</pose>
        <mass>0.01</mass>
        <inertia>
          <ixx>1e-05</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>1e-05</iyy>
          <iyz>0</iyz>
          <izz>1e-05</izz>
        </inertia>
      </inertial>        
      <visual name='roll_arm_viz'>
        <geometry>
          <mesh>
            <scale>0.001 0.001 0.001</scale>
            <uri>model://gimbal_small_3d/meshes/base_arm.dae</uri>
          </mesh>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Green</name>
          </script>
          <shader type='pixel'/>
        </material>
        <pose frame=''>-0.03 -0.005 0 0 0 0</pose>
        <transparency>0</transparency>
        <cast_shadows>1</cast_shadows>
      </visual>
      <collision name="roll_arm_col">
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <box>
           <size>0.07 0.03 0.08</size> 
         </box>
        </geometry>
      </collision>
    </link>    

   <joint name="roll_joint" type="revolute">
      <parent>base_link</parent>
      <child>roll_arm_link</child>
      <pose>-0.019 -0.002 -0.036 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
            <lower>-1.04719755</lower>
            <upper>1.04719755</upper>
        </limit>
        <dynamics>
          <friction>0.0001</friction>
        </dynamics>        
      </axis>
    </joint>        


    <link name='camera_link'>
      <inertial>
        <mass>0.01</mass>
        <inertia>
          <ixx>1e-05</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>1e-05</iyy>
          <iyz>0</iyz>
          <izz>1e-05</izz>
        </inertia>
        <pose frame=''>0.00 0.00 0.025 0 -0 0</pose>
      </inertial>

      <sensor name='camera' type='camera'>
        <pose frame=''>0 0 0 -1.57 -1.57 0</pose>
        <camera name='__default__'>
          <horizontal_fov>2</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
          </image>
          <clip>
            <near>0.05</near>
            <far>15000</far>
          </clip>
        </camera>
        <always_on>1</always_on>
        <update_rate>10</update_rate>
        <visualize>1</visualize>
      </sensor>

      <self_collide>0</self_collide>
      <enable_wind>0</enable_wind>
      <kinematic>0</kinematic>
      <pose frame=''>0 0 0 0 -0 0</pose>
      <visual name='tilt_viz'>
        <pose frame=''>0 0 -0.005 0 -0 0</pose>
        <geometry>
          <mesh>
            <scale>0.001 0.001 0.001</scale>
            <uri>model://gimbal_small_3d/meshes/tilt.dae</uri>
          </mesh>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Blue</name>
          </script>
          <shader type='pixel'/>
        </material>
        <transparency>0</transparency>
        <cast_shadows>1</cast_shadows>
      </visual>
      <visual name='camera_viz'>
        <pose frame=''>0 0 0.02 0 -0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.025</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Grey</name>
          </script>
          <shader type='pixel'/>
        </material>
        <transparency>0</transparency>
        <cast_shadows>1</cast_shadows>
      </visual>
      <collision name='tilt_col'>
        <laser_retro>0</laser_retro>
        <max_contacts>10</max_contacts>
        <pose frame=''>0 0 -0.005 0 -0 0</pose>
        <geometry>
          <mesh>
            <uri>model://gimbal_small_3d/meshes/tilt.dae</uri>
            <scale>0.001 0.001 0.001</scale>
          </mesh>
        </geometry>
        <surface>
          <contact>
            <ode/>
          </contact>
          <friction>
            <ode/>
          </friction>
        </surface>
      </collision>
      <collision name='camera_col'>
        <laser_retro>0</laser_retro>
        <max_contacts>10</max_contacts>
        <pose frame=''>0 0 0.02 0 -0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.025</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
        <surface>
          <contact>
            <ode/>
          </contact>
          <friction>
            <ode/>
          </friction>
        </surface>
      </collision>
    </link>

    <joint name="tilt_joint" type="revolute">
      <parent>roll_arm_link</parent>
      <child>camera_link</child>
      <pose>0.037 0.002 0.018 0 0 0</pose>
      <axis>
        <xyz>-1 0 0</xyz>
        <use_parent_model_frame>1</use_parent_model_frame>
        <limit>
          <lower>-1.74532925</lower>
          <upper>1.74532925</upper>
        </limit>
        <dynamics>
          <friction>0.0001</friction>
        </dynamics>
      </axis>
    </joint>

  <!--
    <static>0</static>
    <allow_auto_disable>1</allow_auto_disable>
    <plugin name='gimbal_small_3d_plugin' filename='libGimbalSmall2dPlugin.so'>
      <joint>tilt_joint</joint>
    </plugin>
  -->
  </model>
</sdf>
